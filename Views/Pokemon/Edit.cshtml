@model TermProject.Models.Pokemon

@{
    ViewData["Title"] = "Edit";
}
<header>
    <h2>Edit</h2>
</header>
<hr />

<article>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PokemonId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PokedexNumber" class="control-label"></label>
                    <input asp-for="PokedexNumber" class="form-control" />
                    <span asp-validation-for="PokedexNumber" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hp" class="control-label"></label>
                    <input asp-for="Hp" class="form-control" />
                    <span asp-validation-for="Hp" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attack" class="control-label"></label>
                    <input asp-for="Attack" class="form-control" />
                    <span asp-validation-for="Attack" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Defense" class="control-label"></label>
                    <input asp-for="Defense" class="form-control" />
                    <span asp-validation-for="Defense" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpAttack" class="control-label"></label>
                    <input asp-for="SpAttack" class="form-control" />
                    <span asp-validation-for="SpAttack" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpDefense" class="control-label"></label>
                    <input asp-for="SpDefense" class="form-control" />
                    <span asp-validation-for="SpDefense" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speed" class="control-label"></label>
                    <input asp-for="Speed" class="form-control" />
                    <span asp-validation-for="Speed" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PokemonType1Id" class="control-label"></label>
                    <select asp-for="PokemonType1Id" class="form-control" asp-items="ViewBag.PokemonType1Id">
                        <option selected></option>
                    </select>
                    <span asp-validation-for="PokemonType1Id" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PokemonType2Id" class="control-label"></label>
                    <select asp-for="PokemonType2Id" class="form-control" asp-items="ViewBag.PokemonType2Id">
                        <option selected></option>
                    </select>
                    <span asp-validation-for="PokemonType2Id" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</article>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    